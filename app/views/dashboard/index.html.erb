<div class="container mt-4">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1 class="text-center mb-4">Welcome, <%= @user.first_name %></h1>

      <div class="text-center mb-3">
        <%= link_to "Add a new Boat", "/boats/new", class: "btn btn-primary btn-lg mr-2" %>
      </div>

      <div class="text-center">
        <%= link_to "Edit Profile", "/users/edit", class: "btn btn-secondary btn-sm" %>
      </div>
    </div>
  </div>
</div>


<div  class="mt-5">
  <div data-toggle-target="togglableElement", class="d-none">
    <%= simple_form_for (@boat) do |f| %>
      <%= f.input :title %>
      <%= f.input :location %>
      <%= f.input :price %>
      <%= f.input :photo, as: :file %>
      <%= f.submit class: 'btn-submit-movie mt-3'%>
    <% end %>
  </div>
 </div>


<% if @next_booking %>
  <p> Your next booked boat trip will leave on the: <%= @next_booking.start_date %> </p>
  <p>You will be going on the boat <%= @next_booking.boat.title  %></p>
    <h3>Your Bookings</h3>
  <div class="row row-cols-1 g-4">
  <% @bookings.each do |booking| %>
    <div class="col card h-100">
      <p>Booking Number <%= booking.id %></p>
      <P>You will be going on: <%= booking.boat.title %></P>
      <p>You will leave port on: <%= booking.start_date %></p>
      <p>You will make Port on <%= booking.end_date %></p>
      </div>
  <% end %>
  </div>
  <% else %>
    <p> You have no bookings </p>
<% end %>


<h2> Your Boats: </h2>
<%= @boats %>
